<?xml version="1.0" encoding="UTF-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent" android:layout_width="match_parent" android:background="@android:color/background_dark" xmlns:aapt="http://schemas.android.com/aapt" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:textAlignment="textEnd" android:layout_marginTop="10dp" android:id="@+id/blank" android:gravity="end" android:textColor="#ffff" android:textSize="80dp"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:foregroundGravity="center">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#f5f2f2"
        android:orientation="horizontal"
        android:backgroundTint="@android:color/background_dark">

        <Button
            android:id="@+id/button9"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f5f2f2"
            android:paddingHorizontal="7dp"
            android:paddingVertical="7dp"
            android:text="9"
            android:textSize="20dp" />

        <Button
        android:id="@+id/button8"
            android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:background="#f5f2f2"
        android:paddingHorizontal="7dp"
        android:paddingVertical="7dp"
        android:text="8"
        android:textSize="20dp" />

        <Button
            android:id="@+id/button7"

            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#f5f2f2"
            android:paddingHorizontal="7dp"
            android:paddingVertical="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:paddingHorizontal="7dp"
            android:paddingVertical="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:text="+"

            android:textSize="20dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#f5f2f2"
            android:orientation="horizontal"
            android:backgroundTint="@android:color/background_dark">

        <Button
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#f5f2f2"
            android:id="@+id/button6"
            android:textSize="20dp"
            android:paddingVertical="7dp"
            android:paddingHorizontal="7dp"
            android:text="6"
            />

    <Button
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#f5f2f2"
        android:id="@+id/button5"
        android:textSize="20dp"
        android:paddingVertical="7dp"
        android:paddingHorizontal="7dp"
        android:text="5" />

    <Button
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#f5f2f2"
        android:id="@+id/button4"
        android:textSize="20dp"
        android:paddingVertical="7dp"
        android:paddingHorizontal="7dp"
        android:text="4" />

    <Button
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@android:color/darker_gray"
        android:id="@+id/sub"
     android:textSize="20dp"
        android:paddingVertical="7dp"
        android:paddingHorizontal="7dp"
        android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#f5f2f2"
            android:orientation="horizontal"
            android:backgroundTint="@android:color/background_dark">

    <Button android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:layout_weight="1" android:background="#f5f2f2" android:id="@+id/button3" android:textSize="20dp" android:paddingVertical="7dp" android:paddingHorizontal="7dp" android:text="3" android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingTop="7dp" android:paddingLeft="7dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_weight="1" android:layout_width="fill_parent" android:background="#f5f2f2" android:id="@+id/button2" android:textSize="20dp" android:paddingVertical="7dp" android:paddingHorizontal="7dp" android:text="2" android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingTop="7dp" android:paddingLeft="7dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_weight="1" android:layout_width="fill_parent" android:background="#f5f2f2" android:id="@+id/button1" android:textSize="20dp" android:paddingVertical="7dp" android:paddingHorizontal="7dp" android:text="1" android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingTop="7dp" android:paddingLeft="7dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_weight="1" android:layout_width="fill_parent" android:background="@android:color/darker_gray" android:id="@+id/mul"  android:textSize="20dp" android:paddingVertical="7dp" android:paddingHorizontal="7dp" android:text="*" android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingTop="7dp" android:paddingLeft="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#f5f2f2"
            android:orientation="horizontal"
            android:backgroundTint="@android:color/background_dark">

            <Button
                android:id="@+id/clr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:paddingHorizontal="7dp"
                android:paddingVertical="7dp"
                android:paddingLeft="7dp"
                android:paddingTop="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="7dp"
                android:text="C"
                android:layout_weight="1"
                android:textColor="#E91E63"
                android:textSize="20dp" />

            <Button android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:background="#f5f2f2" android:id="@+id/button10" android:textSize="20dp" android:paddingVertical="7dp" android:paddingHorizontal="7dp" android:text="0" android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingTop="7dp" android:paddingLeft="7dp"/>

    <Button android:layout_height="wrap_content"  android:layout_weight="1" android:layout_width="fill_parent" android:background="@android:color/darker_gray" android:id="@+id/divid"  android:textSize="20dp" android:paddingVertical="7dp" android:paddingHorizontal="7dp" android:text="/" android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingTop="7dp" android:paddingLeft="7dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@android:color/darker_gray" android:layout_weight="1" android:id="@+id/mod"  android:textSize="20dp" android:paddingVertical="7dp" android:paddingHorizontal="7dp" android:text="%" android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingTop="7dp" android:paddingLeft="7dp" android:longClickable="true"/>

</LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="="
        android:textSize="25dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>